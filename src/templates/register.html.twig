
{% extends "base.html.twig" %}

{% block title %}Register{% endblock title %}

{% block stylesheets %}
	<link rel="stylesheet" href="../resources/styles/auth_pages.css">
{% endblock stylesheets %}

{% block navitemsright %}

	<li class="nav-item">
		<a class="nav-link" href="login.php">Login</a>
	</li>

{% endblock navitemsright %}

{% block content %}
	<h1 style="margin-bottom: 5%;">Register Your Account</h1>
	
	<form action="register.php" method="POST">
	  <div class="form-group">
		<label for="username">Username</label>
		<input type="text" class="form-control {{ username_valid|default('') }}" name="username" aria-describedby="usernameHelp" placeholder="Enter username" value="{{ username|default("") }}">
		<small id="usernameHelp" class="form-text {% if username_valid is not empty %}error-text{% else %}text-muted{% endif %}">{{ username_error_msg|default("") }}</small>
	  </div>
	  
	  <div class="form-group">
		<label for="email">Email address</label>
		<input type="email" class="form-control {{ email_valid|default('') }}" name="email" aria-describedby="emailHelp" placeholder="Enter email" value="{{ email|default("") }}">
		<small id="emailHelp" class="form-text {% if email_valid is not empty %}error-text{% else %}text-muted{% endif %}">{{ email_error_msg|default("We'll never share your email with anyone else.") }}</small>
	  </div>
	  
	  <hr />
	  
	  <div class="form-group">
		<label for="password">Password</label>
		<input type="password" class="form-control {{ password_valid|default('') }}" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
		<small id="passwordHelp" class="form-text {% if password_valid is not empty %}error-text{% else %}text-muted{% endif %}">{{ password_error_msg|default("") }}</small>
	  </div>
	  
	  <div class="form-group">
		<label for="confirmPassword">Confirm Password</label>
		<input type="password" class="form-control {{ password_valid|default('') }}" name="confirmPassword" placeholder="Confirm password">
	  </div>
	  
	  <button id="registerButton" type="submit" class="btn">Register</button>
	
	</form>
{% endblock content %}